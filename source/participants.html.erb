description:  A community of collaborators working together.
---

<% content_for :header do %>
<div class="row text-center" style="padding-top: 30px;">
  <h1 class="animated fadeInDown delay">
    OpenShift Commons Participants
  </h1>
  <p class="animated fadeInUp delay">
    A community of collaborators working together.
  </p>
</div>
<% end %>

<div class="crumbs border_bottom">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul>
          <li>
            <a href="/index.html">Home</a>
          </li>
          <li>/</li>
          <li>
            <a href="/participants.html">OpenShift Commons Participants</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row info_title wow animated fadeInUp">
  <div class="vertical_line">
    <div class="circle_bottom"></div>
  </div>
  <div class="info_vertical">
    <h1>
      OpenShift Commons
      <span>Participants</span>
    </h1>
  </div>
</div>

<!-- Search Participants -->
<section class="content_info">
  <div class="container">

    <div class="row">

      <div class="col-md-8">
              <div class="search">
                <!--<input id="participant-search" placeholder="Search participants">-->
                <input type="text" id="quicksearch" placeholder="Search participants">
              </div>
            </div>
            <div id="filter-container" class="col-md-4">
              <div class="filter">
                <select id="filter" style="margin: 10px; padding: 7px 10px; width: 100%;">
                  <option value = "">Participant Type</option>
                  <option value = "all">All</option>
                  <option value = "enduser">End User</option>
                  <option value = "partner">Partner</option>
                  <option value = "other">Other</option>
                </select>
              </div>
            </div>
            <div id = "tagfilter-container" class="col-md-2" style = "display:none;">
                <div class="filter">
                  <select id="tagfilter" style="margin: 10px; padding: 7px 10px; width: 100%;">
                    <option value = "">Subcategory</option>
                    <option value = "all">All</option>
                    <option value = "Solution Provider">Solution Provider</option>
                    <option value = "Service Cloud Provider">Service/Cloud Provider</option>
                    <option value = "Distributor">Distributor</option>
                    <option value = "ISV">ISV</option>
                    <option value = "OpenShift">OpenShift</option>
                    <option value = "OpenStack">OpenStack</option>


                  </select>
                </div>
              </div>


    </div>
    <br>

<!-- List Participants -->
<div class="container-fluid">
  <div class="grid"><!-- add extra container element for Masonry -->
    <div class="grid-sizer col-lg-4 col-xs-6"></div><!-- add sizing element for columnWidth -->
      <%= partial "participants_list", :object => data.participants.participants.sort_by { | participant | participant[:name].downcase } %>
  </div>
</div>


</div>
</section>
