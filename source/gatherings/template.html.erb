---
title: OpenShift Commons Gathering
description:  The OpenShift Commons community gets together and share experience in person.
---

<% content_for :header do %>
<h1 class="animated fadeInDown delay">
  OpenShift Commons Gathering
</h1>
<p class="animated fadeInUp delay">
  <%= gathering.date.to_time.strftime('%B %d, %Y') %> | <%= gathering.location %>
</p>
<% end %>

<!-- gathering sub navigation -->
<div class="crumbs-nav border_bottom">
  <div class="container">
    <div class="row">
      <div class="col-md-12 nav-center">
        <div class="navbar navbar-gathering">
         <div class="navbar-header">
              <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>
            </div>
            <div class="navbar-collapse collapse navbar-col-centered">
              <ul class="nav navbar-nav">
                <li><a href="#gathering-overview">Overview</a></li>
                <li><a href="#gathering-sponsor">Sponsors</a></li>
                <li><a href="#gathering-schedule">Schedule</a></li>
                <li><a href="#gathering-speakers">Speakers</a></li>
                <li><a href="#gathering-venue">Venue</a></li>
              </ul>
            </div>
        </div>
      </div>
    </div><!-- /.row -->
  </div><!-- /.container -->
</div>

<!-- Gathering Info ----------------------------------------------------------------------------------------------------->
<div class="row info_title wow animated fadeInUp">
  <div class="vertical_line">
    <div class="circle_bottom"></div>
  </div>
  <div class="info_vertical">
    <h1>
      OpenShift Commons Gathering<br>
      <span><%= gathering.location %></span><br><br>
      <p>Where users, partners, customers, contributors and upstream project leads come together to collaborate and work together on OpenShift.</p>
    </h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <% if gathering.sponsoring_URL.length > 0 %>
    <div class="col-sm-4 col-sm-offset-2">
    <% else %>
    <div class="col-sm-4 col-sm-offset-4">
    <% end %>
      <div class="btn-event event-border buy">
        <a href="<%= gathering.registration_URL %>" target="_blank">
          <p class="text-center">
            <% if gathering.registration_text.length > 0 %>
              <%= gathering.registration_text %>
            <% else %>
              Purchase tickets Now
            <% end %>
          </p>
        </a>
      </div>
    </div>
    <% if gathering.sponsoring_URL.length > 0 %>
    <div class="col-sm-4">
      <div class="btn-event apply">
        <a href="<%= gathering.sponsoring_URL %>" target="_blank">
          <p class="text-center">Apply to be a sponsor</p>
        </a>
      </div>
    </div>
    <% end %>
  </div><!-- /.row -->
</div><!-- /.container-->
<br>
<!-- Overview Section ----------------------------------------------------------------------------------------------------------->
<div id="gathering-overview"></div>
<section class="section-gathering section-gathering-secondary">
  <div class="container">
    <div class="row">
      <div class="container">
        <h3 class="text-center">Event Overview</h3><br>
        <!-- Overview Box -->
        <div class="col-md-12 event-box">
          <!-- Left Col -->
          <div class="col-md-6 text-center">
            <% if gathering.lead_text.length > 0 %>
            <p>
              <span class="event-span-red">
                <%= gathering.lead_text %>
              </span>
            </p>
            <% end %>
            <p class="text-justify event-overview">
              <%= gathering.info_text %>
            </p>
            <br>
            <div class="btn-event event-border buy">
              <a href="<%= gathering.registration_URL %>" target="_blank">
                <p>
                <% if gathering.registration_text.length > 0 %>
                  <%= gathering.registration_text %>
                <% else %>
                  Purchase tickets Now
                <% end %>
                </p>
              </a>
            </div>
            <% if gathering.invite_link.length > 0 %>
              <p class="text-center text-2-mobile event-invite"><a href="<%= gathering.invite_link %>" target="_blank"><strong>Invite a friend &gt;&gt;</strong></a></p>
            <% end %>
          </div>
          <!-- Right Col -->
          <div class="col-md-6 text-center">
            <h3 class="text-center">Where</h3>
            <p class="text-center">
             <span class="event-span-red"><%= gathering.location %></span><br>
             <% if gathering.venue_URL.length > 0 %>
             <a href="<%= gathering.venue_URL %>" target="_blank">
             <% else %>
             <a href="#gathering-venue">
             <% end %>
               <%= gathering.venue %>
             </a>
           </p>
            <hr>
            <div class="row">
             <div class="col-xs-6">
                <h3>When</h3>
                <% if gathering.calendar_event_URL.length > 0 %>
                <a href="<%= gathering.calendar_event_URL %>" target="_blank" class="calendar-animate">
                <% end %>
                  <div class="calendar-icon">
                    <em><%= gathering.date.to_time.strftime('%A') %></em>
                    <strong><%= gathering.date.to_time.strftime('%B') %></strong>
                    <span><%= gathering.date.to_time.strftime('%d') %></span>
                  </div>
                <% if gathering.calendar_event_URL.length > 0 %>
                </a>
                <% end %>
             </div>
             <div id="price" class="col-xs-6">
               <h3>Price</h3>
               <% gathering.pricing.each do |price_point| %>
               <p><span class="event-span-red event-invite"><%= price_point.label %>: <%= price_point.price %></span></p>
               <% end %>
             </div>
           </div>
          </div>
        </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
    <% if gathering.additional_info.length > 0 %>
    <div class="container additional-info">
      <p class="text-center">By being co-located in Austin with KubeCon at the Hilton Austin, the OpenShift Commons Gathering will provide a platform for showcasing a full range of technologies that support the OpenShift ecosystem and help bring cloud native project communities together. We strongly encourage you to partake in the full week of events.</p>
    </div>
    <% end %>
  </div>
</section>

<!-- Sponsors Section ---------------------------------------------------------------------------------------------------------------->
<div id="gathering-sponsor"></div>
<section class="section-gathering">
    <div class="container text-center">
        <div class="row container text-center">
            <h3>Sponsors</h3>
            <% if gathering.sponsoring_URL.length > 0 %>
            <p class="text-center">Interested in sponsoring OpenShift Commons Gathering?
              <a href="<%= gathering.sponsoring_URL %>" target="_blank">Apply here.</a>
            </p>
            <% end %>
            <% gathering.sponsors.each do |sponsor| %>
              <!--Sponsor -->
              <div class="sponsor sponsor-height col-xs-6 col-md-3">
                <div class="panel-body">
                  <% sponsor = data.participants.participants.find{ |participants| sponsor.name == participants.name } || data.sponsors.sponsors.find{ |sponsors| sponsor.name == sponsors.name } %>
                  <a href = "<%= sponsor.link %>" target = "_blank">
                    <%= image_tag sponsor.logo, :alt => sponsor.name %>
                  </a>
                </div>
              </div>
            <% end %>
            <% if gathering.sponsoring_URL.length > 0 %>
            <div class="sponsor sponsor-height col-xs-6 col-md-3">
              <div class="panel-body">
                <a href = "<%= gathering.sponsoring_URL %>" target = "_blank">
                  <strong>Your logo here?</strong>
                </a>
              </div>
            </div>
            <% end %>
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>


<!-- Schedule Section ---------------------------------------------------------------------------------------------------------------->
<div id="gathering-schedule"></div>
<section class="section-gathering section-gathering-secondary">
    <div class="container">
        <div class="row">
            <div class="container">
                <h3 class="text-center">Schedule</h3><br>
                <p class="text-center">The day will have a mix of keynotes, panels, ted-style talks, SIG break-out sessions, plenty of time to network over local craft beers and be continuously fuelled by local baristas.</p>
                <br>
                <p class="text-center">
                  <a href="/videos.html"><strong>See session video recordings from previous gatherings Â»</strong></a>
                </p>
                <br>
                <!-- Schedule Box -->
                <div class="col-xs-12 event-box">
                  <!-- Item -->
                  <% gathering.schedule.each_with_index do |session, index| %>
                  <div class="row schedule-list">
                    <div class="col-xs-5 col-sm-2 text-center"><%= session.local_time %></div>
                    <div class="col-xs-7 col-sm-10 schedule-list-border-left"><%= session.session_name %>
                    <% if session.speakers.length > 0 %>
                      <% session.speakers.each do |speaker| %>
                      | <a href="#<%= speaker.id %>"><%= data.speakers.speakers.find{ |spkr| speaker.id == spkr.id }.name %></a>&nbsp;
                      <% end %>
                    <% end %>
                    </div>
                  </div>
                  <%= "<hr>" unless index == gathering.schedule.size - 1 %>
                  <% end %>
                  <!-- /.item-->
              </div><!-- /.schedule box <-->
          </div><!-- /.container -->
          <br><br>
          <div class="btn-event event-border buy">
            <a href="<%= gathering.registration_URL %>" target="_blank">
              <p class="text-center">
                <% if gathering.registration_text.length > 0 %>
                  <%= gathering.registration_text %>
                <% else %>
                  Purchase tickets Now
                <% end %>
              </p>
            </a>
          </div>
        </div><!-- /.row -->
      </div><!-- /.container -->
</section>

<!-- Speakers Section ---------------------------------------------------------------------------------------------------------------->
<div id="gathering-speakers"></div>
<section class="section-gathering">
  <div class="container-fluid">
    <div class="row-fluid container text-center">
      <h3>Speakers</h3>
      <br>
      <!-- Speaker Row-->
      <div class="row-fluid inner">
        <% gathering.schedule.collect(&:speakers).reject{ |k, v| v.nil? }.flatten.uniq.each do |speaker_id| %>
          <% unless speaker_id.nil? %>
            <% speaker = data.speakers.speakers.find{ |spkr| spkr.id == speaker_id["id"] } %>
            <% if speaker.URL.length > 0 %>
            <a class="col-lg-3 col-md-6 col-sm-12 speaker-container" id="<%= speaker.id %>" href="<%= speaker.URL %>">
            <% else %>
            <div class="col-lg-3 col-md-6 col-sm-12 speaker-container" id="<%= speaker.id %>">
            <% end %>
              <div class="panel-image">
                <% if speaker.photo.length > 0 %>
                  <%= image_tag speaker.photo, :alt => speaker.name, :class => "img-circle modal_target5 speaker-img" %>
                <% else %>
                  <%= image_tag "speakers/default.png", :alt => speaker.name, :class => "img-circle modal_target5 speaker-img" %>
                <% end %>
              </div>
              <div class="panel-heading">
                <div class="speaker-text" data-toggle="popover" data-placement="top" data-trigger="hover" data-content="<%= speaker.intro %>">
                  <h3 class="text-center"><%= speaker.name %></h3>
                  <p class="text-center"><%= speaker.role %><%= "<br>" + speaker.company unless speaker.company.length == 0%></p>
                </div>
              </div>
            <% if speaker.URL.length > 0 %>
            </a>
            <% else %>
            </div>
            <% end %>
          <% end %>
        <% end %>
      </div><!-- /.row -->
    </div>
  </div>
</section>

<!-- Venue Section ---------------------------------------------------------------------------------------------------------------->
<div id="gathering-venue"></div>
<section class="section-gathering section-gathering-secondary text-center">
  <div class="container-fluid">
    <div class="row-fluid container">
      <h3>Venue</h3>
      <p class="text-center"><%= gathering.date.to_time.strftime('%B %d, %Y') %> | <%= gathering.time %>
        <br>
        <% if gathering.venue_URL.length > 0 %>
          <a href="<%= gathering.venue_URL %>" target="_blank"><strong><%= gathering.venue %></strong></a>
        <% else %>
          <strong><%= gathering.venue %></strong>
        <% end %>
        <%= "<br />" + gathering.venue_address unless gathering.venue_address.length == 0 %>
        <br /><%= gathering.location %>
        <br><br>
      </p>
      <div class="map-box">
        <% if gathering.google_maps_URL.length > 0 %>
        <iframe src="<%= gathering.google_maps_URL %>" width="100%" height="450" frameborder="0" allowfullscreen=""></iframe>
        <% else %>
        <iframe src="https://www.google.com/maps?q=<%= ERB::Util.url_encode(gathering.venue + "," + gathering.location) %>&output=embed" width="100%" height="450" frameborder="0" allowfullscreen=""></iframe>
        <% end %>
      </div>
    </div><!-- /.row-fluid -->
  </div><!-- /.container-fluid -->
</section>

<!-- SelectNav.js (Gathering Pages only) -->
<script src="/js/selectnav/assets/ender.min.js"></script>
<script src="/js/selectnav/assets/prettify.js"></script>
<script src="/js/selectnav/selectnav.js" type="text/javascript"></script>
<script>
  domready(function(){
    selectnav('short-main-menu', {
      label: 'Main Nav To',
      nested: true,
      indent: '>'
    });

    // javascript Speaker Popover
    $('[data-toggle="popover"]').popover()
  })
</script>
